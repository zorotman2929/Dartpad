void main() {
  double result = calculatePerimeter(10, 5, false);
  print("the result for a rectangle " + result.toString());
  
  result = calculatePerimeter(4, 4, true);
  print("the result for a Square is " + result.toString());
}

double calculatePerimeter(double width, double height, bool isSquare) {
  double area;
  if (isSquare) {
    area = (4 * (width));
  }
  else 
  {
    area = 2 * ((width + height));
  }
  return area;
}
